{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "isolatedModules": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "newLine": "LF",
    "outDir": "./dist/",
    "target": "ES2022",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "strictNullChecks": false,
    "strict": true,
    "paths": { "@/*": ["./src/*"] },
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "test/**/*", "./tsconfig.json", "./jest.config.ts", "./tsup.config.ts"]
}
